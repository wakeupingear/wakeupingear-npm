{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "build": {
            "outputs": ["{projectRoot}/dist"],
            "cache": true
        }
    },
    "defaultBase": "main",
    "release": {
        "changelog": { "automaticFromRef": true },
        "projectsRelationship": "independent",
        "releaseTagPattern": "release/{projectName}/{version}"
    }
}
