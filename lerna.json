{
    "packages": ["packages/*"],
    "version": "independent",
    "npmClient": "npm",
    "command": {
        "publish": {
            "ignoreChanges": [],
            "message": "chore(release): publish"
        },
        "bootstrap": {
            "npmClientArgs": ["--no-package-lock"]
        }
    },
    "useWorkspaces": true
}
