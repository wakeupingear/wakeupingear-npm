{
    "name": "wakeupingear",
    "private": false,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "lerna run build",
        "test": "lerna run test",
        "publish": "lerna publish",
        "generate-readme": "ts-node scripts/generate-readme.ts"
    },
    "pre-commit": [
        "generate-readme",
        "test"
    ],
    "devDependencies": {
        "@types/node": "^22.4.1",
        "lerna": "^6.6.2",
        "lint-staged": "^15.2.9",
        "pre-commit": "^1.2.2",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "tsc --noEmit",
            "npm run generate-readme"
        ]
    }
}
